<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/themeGreen">

        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/imgprof"
            android:background="@drawable/profile"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvname"
            android:text="My Page"
            android:textColor="@color/themeWhite"
            android:textSize="30dp"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/mylist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="내가 쓴 글 보기"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:clickable="true"/>

        <TextView
            android:id="@+id/emgcontact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="비상 연락 설정"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:clickable="true"/>

        <TextView
            android:id="@+id/most_used_way"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="알림받을 장소 설정"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:clickable="true"/>

        <TextView
            android:id="@+id/deleteme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>