<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/themeGreen">

        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/imgprof"
            android:background="@drawable/profile"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvname"
            android:text="비상 연락 설정"
            android:textColor="@color/themeWhite"
            android:textSize="30dp"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/person1_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이름       : "
            android:textSize="20sp"
            android:id="@+id/nametv"
            android:textColor="#000000" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:textSize="20sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="주소록"
            android:id="@+id/getphone1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person1_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="전화번호: "
            android:textSize="20sp"
            android:id="@+id/phonetv"
            android:textColor="#000000" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person2_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이름       : "
            android:textSize="20sp"
            android:id="@+id/nametv2"
            android:textColor="#000000" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/name2"
            android:textSize="20sp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="주소록"
            android:id="@+id/getphone2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person2_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="전화번호: "
            android:textSize="20sp"
            android:id="@+id/phonetv2"
            android:textColor="#000000" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone2"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendcontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="내용      : "
            android:textSize="20sp"
            android:id="@+id/contenttv"
            android:textColor="#000000" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/content"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/savebtn"
        android:layout_gravity="center_horizontal" />

</LinearLayout>